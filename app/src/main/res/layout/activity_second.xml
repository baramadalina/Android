<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidtutorialshub.loginregister.activities.SecondActivity">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/wallpaper"
                        android:weightSum="1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true">


                        <TextView
                            android:text="WE CARE"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:typeface="normal"
                            android:textColor="#000000"
                            android:layout_weight="0.03"
                            android:layout_margin="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                            android:textStyle="normal|bold"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:fontFamily="cursive" />

                        <TextView
                            android:text="FOR YOUR HEALTH"
                            android:layout_width="216dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
                            android:fontFamily="cursive"
                            android:textColor="#000000"
                            android:typeface="normal"
                            android:textSize="18sp"
                            android:textStyle="normal|bold"
                            android:textAlignment="center" />

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/hospital"
                            android:layout_gravity="center"
                            android:layout_weight="0.08" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="215dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="135dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">


                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/inventory"
                                        android:layout_centerInParent="true"
                                        android:id="@+id/ImageViewInventory" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="INVENTORY"
                                        android:textColor="#000000"
                                        android:textSize="16sp"
                                        android:layout_below="@+id/ImageViewInventory"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:textStyle="normal|bold" />


                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/ButtonInventory"
                                        android:background="@android:color/transparent"/>


                                </RelativeLayout>


                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/task"
                                        android:layout_centerInParent="true"
                                        android:id="@+id/ImageViewTask" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="CALENDAR"
                                        android:textColor="#000000"
                                        android:textSize="16sp"
                                        android:layout_below="@+id/ImageViewTask"
                                        android:layout_centerHorizontal="true"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:textStyle="normal|bold" />

                                    <TextView
                                        android:id="@+id/date"
                                        android:layout_width="0dp"
                                        android:layout_height="51dp"
                                        android:text="Date"
                                        android:textAlignment="center"
                                        android:textSize="45dp"
                                        android:visibility="visible" />

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/ButtonCalendar"
                                        android:background="@android:color/transparent"
                                        android:layout_alignParentBottom="true" />

                                </RelativeLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>