<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_70p"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_common_light_round"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <com.sch.calendar.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/checkin_calendar_bg"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            cv:imgLastMonth="@mipmap/ic_arrow_left_light"
            cv:imgNextMonth="@mipmap/ic_arrow_right_light"
            cv:monthBackground="@drawable/checkin_calendar_month_bg"
            cv:titleColor="@color/white"
            cv:weekBackground="@color/white"
            cv:weekColor="@color/contentTextColor"/>

        <Button
            android:id="@+id/btn_checkin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/checkin"/>

    </LinearLayout>

</FrameLayout>