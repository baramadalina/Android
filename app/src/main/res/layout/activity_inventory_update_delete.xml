<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="com.androidtutorialshub.loginregister.activities.InventoryUpdateDeleteActivity">

    <TextView
        android:text="Room:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etroom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etname"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:id="@+id/textView8"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etname"
        android:background="@color/colorAccent"
        android:hint="Enter Name"
        android:layout_width="270dp"
        android:layout_marginBottom="52dp"
        android:layout_height="35dp"
        android:layout_above="@+id/etroom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/etroom"
        android:background="@color/colorAccent"
        android:hint="Enter Room"
        android:layout_width="270dp"
        android:layout_marginBottom="58dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btnupdate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnupdate"
        android:background="@color/colorTextHint"
        android:text="UPDATE EQUIPMENT"
        android:elevation="0dp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="142dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/etroom"
        android:layout_toStartOf="@+id/etroom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorTextHint"
        android:id="@+id/btndelete"
        android:text="Delete existing equipment"
        android:textStyle="normal|bold"
        android:layout_alignTop="@+id/btnupdate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/medical"
        android:id="@+id/imageView4"
        android:layout_height="200dp"
        android:layout_above="@+id/etname"
        android:layout_centerHorizontal="true" />

</RelativeLayout>