<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context="com.androidtutorialshub.loginregister.activities.InventoryUpdateDeleteActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView4"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_above="@+id/etname"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/medical" />

        <!--  Name-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Equipment name"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!--  Location Room-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etroom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location room"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!--  General description-->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="General description"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Task -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Task"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Manufacturer -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etManufacturer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Manufacturer"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Model -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Model"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Preventive maintenance required -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPreventiveMaintenanceRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Preventive maintenance required"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Warranty -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etWarranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Warranty"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Year of manufacture -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etYearOfManufacture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Manufacture year"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <!-- Quantity available -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/etQuantityAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantity available"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/white" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <!--Button update-->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnupdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp" android:background="@color/colorTextHint"
                android:textStyle="normal|bold"
                android:text="UPDATE EQUIPMENT" />
            <!--Button delete-->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btndelete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp" android:background="@color/colorTextHint"
                android:textStyle="normal|bold"
                android:text="Delete equipment" />
        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>