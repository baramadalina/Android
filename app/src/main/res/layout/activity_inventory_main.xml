<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    tools:context="com.androidtutorialshub.loginregister.activities.InventoryMainActivity">

    <TextView
        android:id="@+id/up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Enter Name, Room to store into Inventory"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <TextView
        android:text="Room:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etroom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etname"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:id="@+id/textView8"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etname"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_above="@+id/etroom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="49dp"
        android:background="@color/colorAccent"
        android:hint="Enter Name" />

    <EditText
        android:id="@+id/etroom"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_above="@+id/btnstore"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginBottom="64dp"
        android:background="@color/colorAccent"
        android:hint="Enter Room" />

    <Button
        android:id="@+id/btnstore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginEnd="-143dp"
        android:layout_marginRight="-143dp"
        android:layout_marginBottom="136dp"
        android:layout_toStartOf="@+id/etroom"
        android:layout_toLeftOf="@+id/etroom"
        android:background="@color/colorTextHint"
        android:elevation="0dp"
        android:text="Save EQUIPMENT"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/medical"
        android:id="@+id/imageView4"
        android:layout_height="200dp"
        android:layout_above="@+id/etname"
        android:layout_centerHorizontal="true" />

</RelativeLayout>